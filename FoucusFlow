import time

def countdown(seconds):
    while seconds:
        mins, secs = divmod(seconds, 60)
        timer = f"{mins:02d}:{secs:02d}"
        print(timer, end="\r")
        time.sleep(1)
        seconds -= 1
    print("00:00")
    print("Timeâ€™s up!")

def pomodoro_cycle(work_minutes=25, break_minutes=5, cycles=4):
    print("Welcome to FocusFlow ğŸƒ")
    print(f"Cycles: {cycles}, Work: {work_minutes} min, Break: {break_minutes} min")
    print("-" * 40)

    for cycle in range(1, cycles + 1):
        print(f"\nğŸ”¶ Cycle {cycle}: Focus Time")
        countdown(work_minutes * 60)

        if cycle != cycles:
            print(f"\nğŸ”¹ Take a {break_minutes}-minute break")
            countdown(break_minutes * 60)
        else:
            print("\nğŸ‰ All cycles completed! Great job ğŸ‰")

# Run the timer
pomodoro_cycle()
